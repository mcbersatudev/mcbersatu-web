{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "public" }
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "X-Frame-Options", "value": "ALLOWALL" },
                {
                    "key": "Content-Security-Policy",
                    "value": "frame-ancestors 'self' https://www.instagram.com https://*.whatsapp.com https://vercel.app"
                }
            ]
        }
    ]
}
