{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "public" }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/index.php" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ]
}
